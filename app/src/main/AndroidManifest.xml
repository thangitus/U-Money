<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.itus.u_money">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:targetApi="q">
        <activity android:name=".view.activity.BudgetListActivity" />
        <activity android:name=".view.activity.AddRecurringTransactionActivity" />
        <activity android:name=".view.activity.AddBillActivity" />
        <activity
            android:name=".view.activity.StartActivity"
            android:theme="@style/FlashTheme"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".view.activity.FlashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.ChooseTypeActivity" />
        <activity android:name=".view.activity.AddEventActivity" />
        <activity android:name=".view.activity.AddBudgetActivity" />
        <activity
            android:name=".view.activity.AddTransactionActivity"
            android:parentActivityName=".view.activity.MainActivity" />
        <activity android:name=".view.activity.MainActivity" />
    </application>

</manifest>