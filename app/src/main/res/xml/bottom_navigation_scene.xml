<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="225"
            app:layout_constraintBottom_toBottomOf="@id/navigation"
            app:layout_constraintEnd_toEndOf="@id/navigation"
            app:layout_constraintStart_toStartOf="@id/navigation"
            app:layout_constraintTop_toTopOf="@id/navigation">
            <CustomAttribute
                app:attributeName="crossfade"
                app:customFloatValue="0" />
        </Constraint>

        <Constraint
            android:id="@+id/add_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintCircle="@id/btn_add"
            app:layout_constraintCircleAngle="300"
            app:layout_constraintCircleRadius="10dp" />

        <Constraint
            android:id="@+id/add_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintCircle="@id/btn_add"
            app:layout_constraintCircleAngle="340"
            app:layout_constraintCircleRadius="10dp" />

        <Constraint
            android:id="@+id/add_periodic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintCircle="@id/btn_add"
            app:layout_constraintCircleAngle="20"
            app:layout_constraintCircleRadius="10dp" />

        <Constraint
            android:id="@+id/add_bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintCircle="@id/btn_add"
            app:layout_constraintCircleAngle="60"
            app:layout_constraintCircleRadius="10dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/navigation"
            app:layout_constraintEnd_toEndOf="@id/navigation"
            app:layout_constraintStart_toStartOf="@id/navigation"
            app:layout_constraintTop_toTopOf="@id/navigation">
            <CustomAttribute
                app:attributeName="crossfade"
                app:customFloatValue="1" />
        </Constraint>

        <Constraint
            android:id="@+id/add_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintCircle="@id/btn_add"
            app:layout_constraintCircleAngle="300"
            app:layout_constraintCircleRadius="120dp" />

        <Constraint
            android:id="@+id/add_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintCircle="@id/btn_add"
            app:layout_constraintCircleAngle="340"
            app:layout_constraintCircleRadius="120dp" />

        <Constraint
            android:id="@+id/add_periodic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintCircle="@id/btn_add"
            app:layout_constraintCircleAngle="20"
            app:layout_constraintCircleRadius="120dp" />

        <Constraint
            android:id="@+id/add_bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_bill"
            android:visibility="visible"
            app:layout_constraintCircle="@id/btn_add"
            app:layout_constraintCircleAngle="60"
            app:layout_constraintCircleRadius="120dp" />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        app:duration="300">
        <OnClick app:targetId="@+id/btn_add" />
    </Transition>
</MotionScene>
